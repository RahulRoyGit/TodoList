<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include("header");-%>
  <body>
    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>
    <div class="box">
      <% for(var i =0;i<newListItems.length;i++){ %>
      <div class="item">
        <input type="checkbox">
        <p><%= newListItems[i] %></p>
      </div>
      <% } %>
      <form action="/" method="post">
        <input type="text" name="newItem" placeholder="New Items" autocomplete="off" autofocus>
        <button type="submit" name="button" value="<%= kindOfDay %>">+</button>
      </form>
    </div>
    <%- include("footer"); -%>
  </body>
</html>
